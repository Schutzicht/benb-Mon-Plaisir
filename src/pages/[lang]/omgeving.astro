const t = content[lang] || content.nl;

const allItems = [
    ...t.spots.map(s => ({ ...s, category: t.labels.highlights })), 
    ...t.dining.map(s => ({ ...s, category: t.labels.dining })),
    ...t.sights.map(s => ({ ...s, category: t.labels.cultuur })),
    ...t.activities.map(s => ({ ...s, category: t.labels.natuur }))
];
---

<Layout title={`B&B Mon Plaisir - ${t.title}`} lang={lang}>
  
  <div class="relative bg-stone-50 py-32 text-center text-slate-800">
      <ScrollReveal animation="fade-up">
         <h1 class="font-heading text-5xl md:text-7xl font-light mb-8 text-sea-blue tracking-tight">{t.headline}</h1>
         <p class="max-w-2xl mx-auto text-stone-600 text-xl font-light leading-relaxed">{t.description}</p>
         <div class="w-24 h-[1px] bg-sea-blue/30 mx-auto mt-12"></div>
      </ScrollReveal>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-32">
    
    <div class="columns-1 md:columns-2 lg:columns-3 gap-8 space-y-8">
      
      {allItems.map((item, index) => (
        <div class="break-inside-avoid relative group mb-8">
            <ScrollReveal animation="fade-up" delay={index % 3 * 0.1}>
                <div class="block bg-white rounded-sm shadow-sm hover:shadow-2xl transition-all duration-500 overflow-hidden transform group-hover:-translate-y-1">
                    
                    <div class={`relative overflow-hidden w-full ${index % 5 === 0 ? 'aspect-[3/4]' : 'aspect-[4/3]'}`}>
                        <ParallaxImage 
                            src={item.img} 
                            alt={item.name || item.title} 
                            class="w-full h-full object-cover"
                            height="h-[120%]"
                        />
                        
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

                        <div class="absolute top-4 left-4 z-10">
                            <span class="inline-block bg-white/90 backdrop-blur text-sea-blue text-xs font-bold uppercase tracking-widest px-3 py-1 shadow-sm border border-stone-100">
                                {item.category}
                            </span>
                        </div>
                    </div>

                    <div class="p-8">
                        <h3 class="font-heading text-2xl font-light text-slate-900 mb-3 group-hover:text-sea-blue transition-colors">
                            {item.name || item.title}
                        </h3>
                        <p class="text-stone-500 text-sm leading-relaxed mb-4">
                            {item.desc}
                        </p>
                    </div>
                </div>
            </ScrollReveal>
        </div>
      ))}

    </div>
  </div>
</Layout>
